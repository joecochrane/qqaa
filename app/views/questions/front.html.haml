#header
	= render :partial=>'layouts/header'
#strip
	= render :partial=>'layouts/strip'
#content
	#newquestion 
		%h1#askheader Ask a question
		= form_for @question do |f|	
			- if @question.errors.any?
				#error_explanation
					%h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being asked:"
					%ul
						- @question.errors.full_messages.each do |msg|
							%li= msg


			%br
			%br

			.field
				= f.label :question
				= f.text_field :text
			.field
				= f.label :tags
				= f.text_field :tags	
			.actions
				= f.submit 'Ask'

		
		
		
	#notes
		%span#note= @session.user